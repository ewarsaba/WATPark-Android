<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.watpark.android" android:versionCode="8"
	android:versionName="1.52">
	<uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name="android.permission.INTERNET" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<uses-library android:name="com.google.android.maps" />

		<activity android:name=".activities.SplashActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar" android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="nosensor"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:name=".activities.LotListActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar" android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="nosensor">
		</activity>

		<activity android:name=".activities.LotMapActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="nosensor">
		</activity>
		<activity android:name=".activities.LotActivity"
			android:theme="@android:style/Theme.Black.NoTitleBar"
			android:configChanges="keyboardHidden|orientation"
			android:screenOrientation="nosensor">
		</activity>
	</application>
</manifest>